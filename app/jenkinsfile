pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'python -m pytest tests/'
            }
        }
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                // Deploy steps here (e.g., to Google Cloud)
                sh 'echo "Deploying to production"'
            }
        }
    }
}